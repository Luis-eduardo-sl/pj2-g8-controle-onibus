                    <div class="card">
                        <div class="card-header">
                            <strong>Cadastro</strong> Usuários
                        </div>
                        <div class="card-body card-block">
                            <form form id="form" class="needs-validation" novalidate>

                                <input type="hidden" name="id_usuario" id="id_usuario">

                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label for="text-input" class=" form-control-label">Nome Completo</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="nome" name="text-input" minlength="4" class="form-control" required>
                                        <div class="invalid-feedback">O nome precisa de no minimo 4 letras</div>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label for="text-input" class=" form-control-label">CPF</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="number" id="cpf" name="CPF" placeholder="" class="form-control" required>
                                        <div class="invalid-feedback">CPF inválido</div>

                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label for="text-input" class=" form-control-label">Telefone</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="number" id="telefone" name="telefone" placeholder="" class="form-control" required>
                                        <div class="invalid-feedback">Telefone inválido</div>

                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label for="email-input" class=" form-control-label">Email </label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="email" id="email" name="email-input" placeholder="" class="form-control" required>
                                        <div class="invalid-feedback">Email inválido</div>

                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label for="email-input" class=" form-control-label">Senha </label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="senha" name="email-input" placeholder="" class="form-control">
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label for="select" class=" form-control-label">Tipo</label></div>
                                    <div class="col-12 col-md-9">
                                        <select name="select" id="tipo" class="form-control">
                                            <option value="Comum">Comum</option>
                                            <option value="Idoso">Idoso</option>
                                            <option value="Deficiente">Deficiente</option>
                                            <option value="Estudante">Estudante</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-2"><label for="textarea-input" class=" form-control-label">Observações</label></div>
                                    <div class="col-12 col-md-9"><textarea name="textarea-input" id="observacoes" rows="9" placeholder="" class="form-control"></textarea></div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm">Cadastrar</button>


                            </form>
