<script>
    $(document).ready(function () {
        $('#tabela').DataTable({
            "ajax": {
                "url": "http://localhost:3000/api/usuario/listar",
                "dataSrc": ""
            },
            "columns": [
                { "data": "id_usuario" },
                { "data": "nome" },
                { "data": "cpf" },
                { "data": "telefone" },
                { "data": "email" },
                { "data": "tipo" },
                { "data": "saldo" },
                { "data": "observacoes" },
                {
                            "data": "ações",
                            "render": function(data, type, row, meta) {
                            return '<a href="http://localhost:3001/usuarios/recarga/' + row.id_usuario + '">Recarga</a> /' +
                                '<a href="http://localhost:3001/usuarios/editar/' + row.id_usuario + '">Editar</a> / ' +
                                '<a href="http://localhost:3001/usuarios/excluir/' + row.id_usuario + '">Excluir</a>';
                             }},

                
            ],
            "language": {
          "lengthMenu": "Mostrar _MENU_ registros por página",
          "zeroRecords": "Nenhum registro encontrado",
          "info": "Mostrando página _PAGE_ de _PAGES_",
          "infoEmpty": "Nenhum registro disponível",
          "infoFiltered": "(filtrado de _MAX_ registros no total)",
          "search": "Buscar",
          "paginate": {
            "first": "Primeiro",
            "last": "Último",
            "next": "Próximo",
            "previous": "Anterior"
          }
        }
            
        });
    });
</script>


